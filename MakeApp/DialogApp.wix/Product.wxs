<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">

<Product Id="*" UpgradeCode="D104D446-92BA-4AAF-89C2-78BFC679A918" Language="1033"
                  Manufacturer="Bob -- K6RWY" Name="DialogApp"
                  Version="!(bind.fileVersion.DialogApp.cmp)"
                  >

  <Package InstallerVersion="200" Compressed="yes" InstallScope="perMachine"
                      Manufacturer="Bob -- K6RWY" Description="Installs DialogApp"
                      Comments="Copyright (c) Bob -- K6RWY"
                      />

  <MajorUpgrade Schedule="afterInstallInitialize"
                                AllowDowngrades="no"   IgnoreRemoveFailure="no"   AllowSameVersionUpgrades="no"
                                DowngradeErrorMessage="A newer version of [ProductName] is already installed." />

  <MediaTemplate EmbedCab="yes" />

  <UI Id="My_InstallDir.ui">
    <UIRef Id="WixUI_InstallDir" />
    <Publish Dialog="WelcomeDlg" Control="Next" Event="NewDialog" Value="InstallDirDlg">
      NOT Installed
    </Publish>
    <Publish Dialog="InstallDirDlg" Control="Back" Event="NewDialog" Value="WelcomeDlg" Order="2">
      1
    </Publish>
  </UI>

  <WixVariable Id="WixUIDialogBmp" Value="C:\Program Files (x86)\WixApp\dialog.bmp"/>
  <WixVariable Id="WixUIBannerBmp" Value="C:\Program Files (x86)\WixApp\banner.bmp"/>

  <Icon     Id="DialogApp01Icon.ico"
                                SourceFile="$(var.SolutionDir)..\DialogApp.prj\res\DialogApp.ico"/>
  <Property Id="ARPPRODUCTICON"  Value="DialogApp01Icon.ico" />

  <Feature Id="ProductFeatures" Title="Main Product" Level="1" >
    <ComponentGroupRef Id="App.ftr"/>
    <ComponentGroupRef Id="Uninstall_DialogApp.ftr"/>
  </Feature>
</Product>

<Fragment>
<ComponentGroup Id="App.ftr">
  <ComponentRef Id="DialogApp.cmp"/>
  <ComponentRef Id="Help.cmp"/>
</ComponentGroup>
<ComponentGroup Id="Uninstall_DialogApp.ftr">
  <ComponentRef Id="Uninstall_DialogApp.cmp"/>
</ComponentGroup>
</Fragment>

<!--Directory structure-->
<Fragment>
  <Directory Id="TARGETDIR" Name="SourceDir">
    <Directory Id="ProgramFilesFolder">
      <Directory Id="DialogApp.pff" Name="DialogApp" />
    </Directory>

    <Directory Id="ProgramMenuFolder">
      <Directory Id="DialogApp.pmf" Name="DialogApp" />
    </Directory>

    <Directory Id="DesktopFolder" />

  </Directory>

  <Property Id="ApplicationFolderName" Value="DialogApp" />
  <Property Id="WIXUI_INSTALLDIR"      Value="DialogApp.pff"/>
  <Property Id="WixAppFolder"          Value="WixPerMachineFolder" />
</Fragment>

<Fragment>

  <Component Id="DialogApp.cmp"  Guid="8A819DBC-3A47-4B3F-8143-23AA372A46FF" Directory="DialogApp.pff">
    <File Id="DialogApp.cmp" Source="$(var.SolutionDir)..\Release\DialogApp.exe" KeyPath="yes"/>

    <Shortcut Id               = "DialogApp.shc"
              Name             = "DialogApp"
              Description      = "A Dialog Application"
              Advertise        = "yes"
              Directory        = "DialogApp.pmf"
              WorkingDirectory = "DialogApp.pff"
              Icon             = "DialogApp01Icon.ico"
              />

    <Shortcut Id               = "DialogApp.dsk"
              Name             = "DialogApp"
              Description      = "A Dialog Application"
              Advertise        = "yes"
              Directory        = "DesktopFolder"
              WorkingDirectory = "DialogApp.pff"
              Icon             = "DialogApp01Icon.ico"
              />
    <Condition>
      <![CDATA[Installed OR VersionNT >= 601]]>
    </Condition>
  </Component>

  <Component Id="Help.cmp"  Guid="223C7061-7703-454F-A9FE-D7F8F452AD36" Directory="DialogApp.pff">
    <File Id="Help.cmp" Source="$(var.SolutionDir)..\Release\DialogApp.chm" KeyPath="yes"/>
  </Component>

</Fragment>

<Fragment>

  <Component Id="Uninstall_DialogApp.cmp"
                                Guid="DA20258A-C58B-4D8A-8D65-E51FE677D6E4" Directory="DialogApp.pmf">

    <Shortcut Id               = "UninstallDialogApp.shc"
              Name             = "Uninstall DialogApp"
              Description      = "Uninstalls DialogApp"
              Target           = "[System64Folder]msiexec.exe"
              Arguments        = "/x [ProductCode]"
              Icon             = "DialogApp01Icon.ico"
              />
    <RemoveFolder Id="DialogApp.uni" Directory="DialogApp.pmf" On="uninstall"/>
    <RegistryValue Root="HKCU" Key="Software\Uninstall_DialogApp.cmp" Name="installed"
                   Type="integer" Value="1" KeyPath="yes"/>
  </Component>

</Fragment>

</Wix>
